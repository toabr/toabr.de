<button id="about-btn" type="button" class="fs-5 rounded-circle btn btn-link">
  <div style="transform: rotate(210deg); transition: all 0.1s linear 0.3s;">
    <svg xmlns="http://www.w3.org/2000/svg" width="1.5em" height="1.5em" viewBox="0 0 512 512"><path fill="currentColor" d="M8.31 189.9l176-151.1c15.41-13.3 39.69-2.509 39.69 18.16v80.05C384.6 137.9 512 170.1 512 322.3c0 61.44-39.59 122.3-83.34 154.1c-13.66 9.938-33.09-2.531-28.06-18.62c45.34-145-21.5-183.5-176.6-185.8v87.92c0 20.7-24.31 31.45-39.69 18.16l-176-151.1C-2.753 216.6-2.784 199.4 8.31 189.9z"></path></svg>
  </div>
</button>
<script>
    const bodyClickhandler = (e) => {
      const aboutBtn = document.querySelector("#about-btn")
      const isOpen = document.body.hasAttribute('open')

      if (isOpen) {
        document.body.removeAttribute('open')
        return
      }

      if (!isOpen && e.composedPath().includes(aboutBtn)) {
        document.body.toggleAttribute('open')
        return
      }
    }

    window.addEventListener('click', bodyClickhandler)

    // return function cleanup() {
    //   window.removeEventListener('click', bodyClickhandler)
    // }
</script>
<style>
#about-btn {
  animation: wiggle 0.5s;
  animation-delay: 3s;
  animation-timing-function: ease-in-out;
  animation-iteration-count: 1;
  
  &:hover {
    animation: flip 0.5s;
    animation-fill-mode: forwards;
    animation-iteration-count: 1;
  }
}

@keyframes wiggle {
  0% {transform: rotate(20deg);}
  50% {transform: rotate(-20deg);}
  100% {transform: rotate(20deg);}
}

@keyframes flip {
  0% {transform: rotate(0);}
  25% {transform: rotate(-200deg);}
  50% {transform: rotate(-160deg);}
  75% {transform: rotate(-190deg);}
  100% {transform: rotate(-180deg);}
}
</style>
