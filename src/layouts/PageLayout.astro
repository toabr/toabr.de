---
import BaseHead from '../components/BaseHead.astro'
import HeaderLink from '../components/HeaderLink.astro'
import AboutSection from '../components/AboutSection.astro'
import Hero from '../components/Hero.astro'
import AboutBtn from '../components/AboutBtn.astro'
import ThemeSwitch from '../components/ThemeSwitch.astro'
import Symbols from '../components/Symbols.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION, SITE_HERO } from '../consts.js';

const { title, description, image } = Astro.props;
---
<html lang="en">
  <head>
    <BaseHead
      title={title || SITE_TITLE}
      description={description || SITE_DESCRIPTION}
      image={image || SITE_HERO} />
  </head>
  <body>
    <Symbols/>
    <div id="page" class="min-vh-100 overflow-hidden d-flex flex-column">
      <header class="container-fluid text-center"> 
        <div class="d-flex justify-content-between align-items-center pt-2">
          <AboutBtn />
          <ThemeSwitch />
        </div>
        <Hero/>
        <nav class="btn-group mt-5 mb-4">
          <HeaderLink href="/" class="btn btn-brand"><span>Home</span></HeaderLink>
          <HeaderLink href="/wiki" class="btn btn-brand"><span>Wiki</span></HeaderLink>
        </nav>
        <div class="text-center mt-3 undefined">
          {title && <h1>{title}</h1>}
          {!title && <h1 class="braces"><span>to</span>abr.de</h1>}
          {description && <p class="lead text-capitalize">{description}</p> }
        </div>
      </header> 
      <main class="container" style="max-width: 1040px;">
        <slot/>
      </main>
      <Footer/>
    </div>
    <aside id="about" class="about">
      <AboutSection/>
    </aside>
  </body>
</html>
