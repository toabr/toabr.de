---
import { getCollection } from "astro:content";
import PageLayout from "../../layouts/PageLayout.astro";
import TagCloud from "../../components/TagCloud.astro"
import PageBrake from './../../components/PageBrake.astro'
import TitlesList from './../../components/TitlesList.astro'
const articles = await getCollection("wiki");
---
<PageLayout title="Snippets Wiki" desc="Browse a bunch of code snippets by tag.">
  <div class="container-small">
    <TagCloud/>
    <PageBrake/>
    {articles &&
      <TitlesList {articles} />
    }
  </div>
</PageLayout>
